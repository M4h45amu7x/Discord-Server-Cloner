{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "es2016",
        "lib": ["es6"],
        "module": "commonjs",
        "resolveJsonModule": true,
        "allowJs": true,
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
